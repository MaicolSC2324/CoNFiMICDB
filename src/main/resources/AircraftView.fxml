<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.java.fx.controllers.AircraftController"
            prefHeight="800.0" prefWidth="1000.0"
            style="-fx-background-color: #FFFFFF;">

    <top>
        <VBox style="-fx-background-color: #2C3E50; -fx-padding: 25px;">
            <Label text="GestiÃ³n de Aeronaves"
                   style="-fx-font-size: 32px; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;"/>
            <Label text="Administra el inventario de tu flota"
                   style="-fx-font-size: 12px; -fx-text-fill: #BDC3C7; -fx-padding: 5px 0px 0px 0px;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 25px;">
            <!-- Formulario -->
            <VBox style="-fx-border-color: #ECF0F1; -fx-border-width: 1; -fx-padding: 20px; -fx-background-color: #F8F9FA; -fx-border-radius: 5;">
                <Label text="DATOS DE LA AERONAVE" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2C3E50; -fx-padding: 0px 0px 15px 0px;"/>

                <GridPane hgap="20" vgap="15">
                    <Label text="MatrÃ­cula:*" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
                    <TextField fx:id="txtMatricula" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="220" style="-fx-control-inner-background: #FFFFFF; -fx-border-color: #BDC3C7;"/>

                    <Label text="Fabricante:*" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
                    <ComboBox fx:id="cbFabricante" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="220" editable="true" style="-fx-control-inner-background: #FFFFFF; -fx-border-color: #BDC3C7;"/>

                    <Label text="Modelo:*" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
                    <ComboBox fx:id="cbModelo" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="220" editable="true" style="-fx-control-inner-background: #FFFFFF; -fx-border-color: #BDC3C7;"/>

                    <Label text="Serie:*" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
                    <TextField fx:id="txtSerie" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="220" style="-fx-control-inner-background: #FFFFFF; -fx-border-color: #BDC3C7;"/>

                    <Label text="Propietario:" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
                    <ComboBox fx:id="cbPropietario" GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="220" editable="true" style="-fx-control-inner-background: #FFFFFF; -fx-border-color: #BDC3C7;"/>

                    <Label text="Explotador:" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
                    <ComboBox fx:id="cbExplotador" GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="220" editable="true" style="-fx-control-inner-background: #FFFFFF; -fx-border-color: #BDC3C7;"/>

                    <Label text="TSN (Horas):*" GridPane.columnIndex="2" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
                    <TextField fx:id="txtTSN" text="0.00" GridPane.columnIndex="3" GridPane.rowIndex="2" prefWidth="220" style="-fx-control-inner-background: #FFFFFF; -fx-border-color: #BDC3C7;"/>

                    <Label text="CSN (Ciclos):*" GridPane.columnIndex="2" GridPane.rowIndex="3" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
                    <TextField fx:id="txtCSN" text="0" GridPane.columnIndex="3" GridPane.rowIndex="3" prefWidth="220" style="-fx-control-inner-background: #FFFFFF; -fx-border-color: #BDC3C7;"/>

                    <Label text="Fecha Registro:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
                    <DatePicker fx:id="dpFechaRegistro" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="220" style="-fx-control-inner-background: #FFFFFF; -fx-border-color: #BDC3C7;"/>

                    <Label text="Estado:" GridPane.columnIndex="2" GridPane.rowIndex="4" style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
                    <HBox spacing="10" GridPane.columnIndex="3" GridPane.rowIndex="4">
                        <CheckBox fx:id="chkActivo" text="Activa" selected="true" style="-fx-font-size: 11px; -fx-text-fill: #2C3E50;"/>
                    </HBox>
                </GridPane>
            </VBox>

            <!-- Botones -->
            <HBox spacing="10" style="-fx-alignment: center; -fx-padding: 10px 0;">
                <Button fx:id="btnGuardar" text="+ Guardar" prefWidth="120" prefHeight="40"
                        style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: #27AE60; -fx-text-fill: #FFFFFF; -fx-padding: 8px; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                <Button fx:id="btnActualizar" text="âœ Actualizar" prefWidth="120" prefHeight="40" disable="true"
                        style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: #3498DB; -fx-text-fill: #FFFFFF; -fx-padding: 8px; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                <Button fx:id="btnEliminar" text="ðŸ—‘ Eliminar" prefWidth="120" prefHeight="40" disable="true"
                        style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: #E74C3C; -fx-text-fill: #FFFFFF; -fx-padding: 8px; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                <Button fx:id="btnLimpiar" text="âŸ³ Limpiar" prefWidth="120" prefHeight="40"
                        style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: #F39C12; -fx-text-fill: #FFFFFF; -fx-padding: 8px; -fx-border-radius: 5; -fx-background-radius: 5;"/>
                <Button fx:id="btnVolver" text="â† Volver" prefWidth="120" prefHeight="40"
                        style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-background-color: #95A5A6; -fx-text-fill: #FFFFFF; -fx-padding: 8px; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </HBox>

            <!-- Tabla -->
            <VBox style="-fx-border-color: #ECF0F1; -fx-border-width: 1; -fx-padding: 15px; -fx-background-color: #F8F9FA; -fx-border-radius: 5; -fx-alignment: center;">
                <Label text="AERONAVES REGISTRADAS" style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2C3E50; -fx-padding: 0px 0px 10px 0px;"/>
                <TableView fx:id="tableAircraft" prefHeight="300.0" prefWidth="750" style="-fx-background-color: #FFFFFF;">
                    <columns>
                        <TableColumn fx:id="colMatricula" text="MatrÃ­cula" prefWidth="100"/>
                        <TableColumn fx:id="colFabricante" text="Fabricante" prefWidth="130"/>
                        <TableColumn fx:id="colModelo" text="Modelo" prefWidth="130"/>
                        <TableColumn fx:id="colSerie" text="Serie" prefWidth="90"/>
                        <TableColumn fx:id="colFechaRegistro" text="Fecha Registro" prefWidth="120"/>
                        <TableColumn fx:id="colTSN" text="TSN (Horas)" prefWidth="100"/>
                        <TableColumn fx:id="colCSN" text="CSN (Ciclos)" prefWidth="100"/>
                        <TableColumn fx:id="colActivo" text="Estado" prefWidth="85"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>

