<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.java.fx.controllers.AircraftController"
            prefHeight="700.0" prefWidth="900.0">

    <top>
        <Label text="Gestión de Aeronaves" style="-fx-font-size: 24px; -fx-padding: 15px; -fx-font-weight: bold;"/>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20px;">
            <!-- Formulario -->
            <GridPane hgap="15" vgap="12">
                <Label text="Matrícula:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtMatricula" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="250"/>

                <Label text="Fabricante:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtFabricante" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="250"/>

                <Label text="Modelo:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtModelo" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="250"/>

                <Label text="Serie:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="txtSerie" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="250"/>

                <Label text="Propietario:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="txtPropietario" GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="250"/>

                <Label text="Explotador:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="txtExplotador" GridPane.columnIndex="3" GridPane.rowIndex="1" prefWidth="250"/>

                <Label text="TSN (Horas):" GridPane.columnIndex="2" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtTSN" text="0.00" GridPane.columnIndex="3" GridPane.rowIndex="2" prefWidth="250"/>

                <Label text="CSN (Ciclos):" GridPane.columnIndex="2" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtCSN" text="0" GridPane.columnIndex="3" GridPane.rowIndex="3" prefWidth="250"/>
            </GridPane>

            <!-- Botones -->
            <HBox spacing="12" style="-fx-alignment: center; -fx-padding: 10px 0;">
                <Button fx:id="btnGuardar" text="Guardar" onAction="#guardar"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 20px;"/>
                <Button fx:id="btnActualizar" text="Actualizar" onAction="#actualizar" disable="true"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 20px;"/>
                <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminar" disable="true"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 20px;"/>
                <Button fx:id="btnLimpiar" text="Limpiar" onAction="#limpiarFormulario"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 20px;"/>
                <Button fx:id="btnVolver" text="Volver" onAction="#volver"
                        style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 20px;"/>
            </HBox>

            <!-- Tabla -->
            <TableView fx:id="tableAircraft" prefHeight="300.0">
                <columns>
                    <TableColumn fx:id="colMatricula" text="Matrícula" prefWidth="120"/>
                    <TableColumn fx:id="colFabricante" text="Fabricante" prefWidth="150"/>
                    <TableColumn fx:id="colModelo" text="Modelo" prefWidth="150"/>
                    <TableColumn fx:id="colTSN" text="TSN" prefWidth="100"/>
                    <TableColumn fx:id="colCSN" text="CSN" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>