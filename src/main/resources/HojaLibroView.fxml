<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.fx.controllers.HojaLibroController" style="-fx-background-color: #f5f5f5;">
    <top>
        <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;" spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <Label text="Gestionar Hojas del Libro de Vuelo" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" />

            <GridPane hgap="15" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                </columnConstraints>

                <Label text="Matrícula A/C" style="-fx-font-weight: bold; -fx-text-fill: #333333;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="cbMatricula" promptText="Seleccione matrícula" style="-fx-font-size: 11;" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                <Label text="No Hoja Libro" style="-fx-font-weight: bold; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <TextField fx:id="txtNoHojaLibro" promptText="Registre Número de Página" style="-fx-font-size: 11;" />
                    <Button fx:id="btnBuscar" text="Buscar" style="-fx-padding: 8px 15px; -fx-font-size: 11; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                </HBox>

                <Label text="Fecha" style="-fx-font-weight: bold; -fx-text-fill: #333333;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <DatePicker fx:id="dpFecha" style="-fx-font-size: 11;" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                <Label text="Estado Hoja" style="-fx-font-weight: bold; -fx-text-fill: #333333;" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                <ComboBox fx:id="cbEstadoHoja" promptText="Seleccione Estado" style="-fx-font-size: 11;" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="btnGuardar" text="Guardar" style="-fx-padding: 8px 20px; -fx-font-size: 11; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                <Button fx:id="btnActualizar" text="Actualizar" style="-fx-padding: 8px 20px; -fx-font-size: 11; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                <Button fx:id="btnEliminar" text="Eliminar" style="-fx-padding: 8px 20px; -fx-font-size: 11; -fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                <Button fx:id="btnLimpiar" text="Limpiar" style="-fx-padding: 8px 20px; -fx-font-size: 11; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                <Button fx:id="btnVolver" text="Volver" style="-fx-padding: 8px 20px; -fx-font-size: 11; -fx-background-color: #757575; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <Label text="Hojas Registradas" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #333333;" />
            <TableView fx:id="tableHojaLibro" style="-fx-font-size: 11; -fx-control-inner-background: #ffffff;">
                <columns>
                    <TableColumn fx:id="colMatricula" text="Matrícula A/C" prefWidth="150" />
                    <TableColumn fx:id="colNoHoja" text="No Hoja Libro" prefWidth="150" />
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="150" />
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="150" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>

