<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.fx.controllers.HojaLibroController" style="-fx-background-color: #f5f5f5;">
    <top>
        <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <Label text="Gestionar Hojas del Libro de Vuelo" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        </VBox>
    </top>

    <center>
        <TabPane fx:id="tabPaneHojaLibro" style="-fx-padding: 20;" tabClosingPolicy="UNAVAILABLE">
            <!-- TAB 1: HOJAS DEL LIBRO -->
            <Tab fx:id="tabHojas" text="Hojas del Libro" style="-fx-font-size: 12; -fx-padding: 10;">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <!-- Campos en una sola fila -->
                    <GridPane fx:id="gridpaneHoja" hgap="10" vgap="5">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="140" />
                            <ColumnConstraints prefWidth="160" />
                            <ColumnConstraints prefWidth="130" />
                            <ColumnConstraints prefWidth="130" />
                            <ColumnConstraints prefWidth="150" />
                        </columnConstraints>

                        <Label text="Matrícula A/C" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ComboBox fx:id="cbMatricula" promptText="Seleccione" style="-fx-font-size: 10;" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                        <Label text="No Hoja Libro" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <TextField fx:id="txtNoHojaLibro" promptText="Número" style="-fx-font-size: 10;" HBox.hgrow="ALWAYS" />
                            <Button fx:id="btnBuscar" text="Buscar" style="-fx-padding: 6px 12px; -fx-font-size: 9; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                        </HBox>

                        <Label text="Fecha" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <DatePicker fx:id="dpFecha" style="-fx-font-size: 10;" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                        <Label text="Estado Hoja" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                        <ComboBox fx:id="cbEstadoHoja" promptText="Seleccione" style="-fx-font-size: 10;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label text="Tipo de Operación" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                        <ComboBox fx:id="cbTipoOperacion" promptText="Seleccione" style="-fx-font-size: 10;" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                    </GridPane>

                    <!-- Observaciones y Botones -->
                    <HBox spacing="8" alignment="CENTER">
                        <Label text="Observaciones:" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" />
                        <TextField fx:id="txtObservaciones" promptText="Ingrese observaciones..." style="-fx-font-size: 10;" HBox.hgrow="ALWAYS" />
                        <Separator orientation="VERTICAL" />
                        <Button fx:id="btnGuardar" text="Guardar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                        <Button fx:id="btnActualizar" text="Actualizar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                        <Button fx:id="btnEliminar" text="Eliminar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                        <Button fx:id="btnLimpiar" text="Limpiar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                    </HBox>

                    <Label text="Hojas Registradas" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                    <TableView fx:id="tableHojaLibro" style="-fx-font-size: 10; -fx-control-inner-background: #ffffff;" prefHeight="400" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colNoHoja" text="No Hoja Libro" prefWidth="130" />
                            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120" />
                            <TableColumn fx:id="colTipoOperacionTabla" text="Tipo Operación" prefWidth="140" />
                            <TableColumn fx:id="colEstado" text="Estado" prefWidth="110" />
                            <TableColumn fx:id="colNoReportes" text="No Reportes" prefWidth="100" />
                            <TableColumn fx:id="colTotalPiernas" text="Total Piernas" prefWidth="110" />
                            <TableColumn fx:id="colTiempoTotal" text="Tiempo Total (hrs)" prefWidth="130" />
                            <TableColumn fx:id="colObservacionesTabla" text="Observaciones" prefWidth="200" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- TAB 2: PIERNAS DE VUELO -->
            <Tab fx:id="tabPiernas" text="Piernas de Vuelo" style="-fx-font-size: 12; -fx-padding: 10;">
                <VBox spacing="15" style="-fx-padding: 20;">
                    <HBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-border-radius: 4;">
                        <Label text="Hoja Seleccionada:" style="-fx-font-weight: bold; -fx-text-fill: #333333;" />
                        <TextField fx:id="txtHojaSeleccionada" style="-fx-font-size: 11;" editable="false" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <GridPane hgap="10" vgap="5">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="90" />
                            <ColumnConstraints prefWidth="110" />
                            <ColumnConstraints prefWidth="110" />
                            <ColumnConstraints prefWidth="80" />
                            <ColumnConstraints prefWidth="110" />
                            <ColumnConstraints prefWidth="110" />
                            <ColumnConstraints prefWidth="110" />
                        </columnConstraints>

                        <Label text="No Pierna" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="txtNoPierna" promptText="Número" style="-fx-font-size: 10;" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                        <Label text="Origen" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <ComboBox fx:id="cbOrigen" promptText="Origen" style="-fx-font-size: 10;" GridPane.columnIndex="1" GridPane.rowIndex="1" editable="true" />

                        <Label text="Destino" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <ComboBox fx:id="cbDestino" promptText="Destino" style="-fx-font-size: 10;" GridPane.columnIndex="2" GridPane.rowIndex="1" editable="true" />

                        <Label text="Ciclos" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                        <TextField fx:id="txtCiclos" promptText="0" style="-fx-font-size: 10;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label text="Despegue" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                        <TextField fx:id="txtDespegue" promptText="14:30" style="-fx-font-size: 10;" GridPane.columnIndex="4" GridPane.rowIndex="1" />

                        <Label text="Aterrizaje" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                        <TextField fx:id="txtAterrizaje" promptText="15:45" style="-fx-font-size: 10;" GridPane.columnIndex="5" GridPane.rowIndex="1" />

                        <Label text="Tiempo Vuelo" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="6" GridPane.rowIndex="0" />
                        <TextField fx:id="txtTiempoVuelo" promptText="00:00" style="-fx-font-size: 10;" GridPane.columnIndex="6" GridPane.rowIndex="1" editable="false" disable="true" />
                    </GridPane>

                    <GridPane hgap="10" vgap="5">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="110" />
                            <ColumnConstraints prefWidth="110" />
                            <ColumnConstraints prefWidth="110" />
                        </columnConstraints>

                        <Label text="Motor 1" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="txtMotor1" promptText="Aceite" style="-fx-font-size: 10;" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                        <Label text="Motor 2" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <TextField fx:id="txtMotor2" promptText="Aceite" style="-fx-font-size: 10;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="APU" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <TextField fx:id="txtAPU" promptText="Aceite" style="-fx-font-size: 10;" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    </GridPane>

                    <HBox spacing="8" alignment="CENTER_RIGHT">
                        <Button fx:id="btnGuardarPierna" text="Guardar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                        <Button fx:id="btnActualizarPierna" text="Actualizar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                        <Button fx:id="btnEliminarPierna" text="Eliminar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                        <Button fx:id="btnLimpiarPierna" text="Limpiar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                    </HBox>

                    <Label text="Piernas Registradas" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                    <TableView fx:id="tablePiernas" style="-fx-font-size: 10; -fx-control-inner-background: #ffffff;" prefHeight="350" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colIdPierna" text="ID Pierna" prefWidth="70" />
                            <TableColumn fx:id="colNoPiernaTabla" text="No Pierna" prefWidth="65" />
                            <TableColumn fx:id="colOrigenTabla" text="Origen" prefWidth="80" />
                            <TableColumn fx:id="colDestinoTabla" text="Destino" prefWidth="80" />
                            <TableColumn fx:id="colDespegueTabla" text="Despegue" prefWidth="75" />
                            <TableColumn fx:id="colAterrizajeTabla" text="Aterrizaje" prefWidth="75" />
                            <TableColumn fx:id="colTiempoVueloTabla" text="Tiempo Vuelo" prefWidth="85" />
                            <TableColumn fx:id="colCiclosTabla" text="Ciclos" prefWidth="60" />
                            <TableColumn fx:id="colMotor1Tabla" text="Motor 1" prefWidth="70" />
                            <TableColumn fx:id="colMotor2Tabla" text="Motor 2" prefWidth="70" />
                            <TableColumn fx:id="colAPUTabla" text="APU" prefWidth="70" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- TAB 3: DISCREPANCIAS (ATAs) -->
            <Tab fx:id="tabDiscrepancias" text="Discrepancias (ATAs)" style="-fx-font-size: 12; -fx-padding: 10;">
                <VBox spacing="10" style="-fx-padding: 15;">
                    <!-- Hoja Seleccionada -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Hoja Seleccionada:" style="-fx-font-weight: bold; -fx-text-fill: #333333;" />
                        <TextField fx:id="txtHojaSeleccionadaDiscrepancia" style="-fx-font-size: 11;" editable="false" prefWidth="100" />
                        <Region HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Campos en una sola fila -->
                    <GridPane hgap="10" vgap="5">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="120" />
                            <ColumnConstraints prefWidth="140" />
                            <ColumnConstraints prefWidth="160" />
                            <ColumnConstraints prefWidth="100" />
                            <ColumnConstraints prefWidth="120" />
                        </columnConstraints>

                        <Label text="No Discrepancia" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="txtNoDiscrepancia" promptText="Número" style="-fx-font-size: 10;" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                        <Label text="Quién Reporta" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <ComboBox fx:id="cbQuienReporta" promptText="Seleccione" style="-fx-font-size: 10;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="ATA" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <TextField fx:id="txtAtaCode" promptText="NN-NN-NN" style="-fx-font-size: 10;" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                        <Label text="No Técnico" style="-fx-font-weight: bold; -fx-font-size: 10; -fx-text-fill: #333333;" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                        <TextField fx:id="txtNoTecnico" promptText="Número" style="-fx-font-size: 10;" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                    </GridPane>

                    <!-- Descripción y Acción Correctiva en dos columnas -->
                    <GridPane hgap="10" vgap="5">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50" />
                            <ColumnConstraints percentWidth="50" />
                        </columnConstraints>

                        <Label text="Descripción" style="-fx-font-weight: bold; -fx-text-fill: #333333;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextArea fx:id="taDescripcion" promptText="Ingrese la descripción..." style="-fx-font-size: 10; -fx-padding: 5;" wrapText="true" prefRowCount="2" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                        <Label text="Acción Correctiva" style="-fx-font-weight: bold; -fx-text-fill: #333333;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <TextArea fx:id="taAccionCorrectiva" promptText="Ingrese la acción correctiva..." style="-fx-font-size: 10; -fx-padding: 5;" wrapText="true" prefRowCount="2" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </GridPane>

                    <!-- Botones -->
                    <HBox spacing="8" alignment="CENTER_RIGHT">
                        <Button fx:id="btnGuardarDiscrepancia" text="Guardar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                        <Button fx:id="btnActualizarDiscrepancia" text="Actualizar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                        <Button fx:id="btnEliminarDiscrepancia" text="Eliminar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                        <Button fx:id="btnLimpiarDiscrepancia" text="Limpiar" style="-fx-padding: 6px 15px; -fx-font-size: 10; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
                    </HBox>

                    <!-- Tabla de Discrepancias -->
                    <Label text="Discrepancias Registradas" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #333333;" />
                    <TableView fx:id="tableDiscrepancias" style="-fx-font-size: 10; -fx-control-inner-background: #ffffff;" prefHeight="300" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colIdDiscrepancia" text="ID" prefWidth="80" />
                            <TableColumn fx:id="colNoDiscrepanciaTabla" text="No" prefWidth="50" />
                            <TableColumn fx:id="colQuienReportaTabla" text="Reporta" prefWidth="100" />
                            <TableColumn fx:id="colAtaTabla" text="ATA" prefWidth="70" />
                            <TableColumn fx:id="colNoTecnicoTabla" text="Técnico" prefWidth="70" />
                            <TableColumn fx:id="colDescripcionTabla" text="Descripción" prefWidth="250" />
                            <TableColumn fx:id="colAccionCorrectivaTabla" text="Acción Correctiva" prefWidth="250" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <Button fx:id="btnCargarRegistros" text="Cargar Registros" style="-fx-padding: 8px 20px; -fx-font-size: 11; -fx-background-color: #FF9800; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
            <Button fx:id="btnGenerarReportes" text="Generar Reportes" onAction="#abrirReportesView" style="-fx-padding: 8px 20px; -fx-font-size: 11; -fx-background-color: #1976D2; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
            <Button fx:id="btnVolver" text="Volver" style="-fx-padding: 8px 20px; -fx-font-size: 11; -fx-background-color: #757575; -fx-text-fill: white; -fx-border-radius: 4; -fx-background-radius: 4;" />
        </HBox>
    </bottom>
</BorderPane>

