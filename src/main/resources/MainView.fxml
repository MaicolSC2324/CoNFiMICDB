<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.java.fx.controllers.MainController"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #FFFFFF;">

    <top>
        <VBox style="-fx-background-color: #2C3E50; -fx-padding: 30px;">
            <Label text="ConFiMICDB"
                   style="-fx-font-size: 36px; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;"/>
            <Label text="Sistema de Gestión de Aeronaves"
                   style="-fx-font-size: 14px; -fx-text-fill: #ECF0F1; -fx-padding: 5px 0px 0px 0px;"/>
            <Label text="Reliability Software"
                   style="-fx-font-size: 12px; -fx-text-fill: #BDC3C7; -fx-padding: 3px 0px 0px 0px;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="30" style="-fx-padding: 80px; -fx-alignment: center;">
            <Label text="¿Qué deseas hacer?"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

            <VBox spacing="15" style="-fx-alignment: center;">
                <Button fx:id="btnAddAircraft" text="✈  Gestionar Aeronaves"
                        prefWidth="400" prefHeight="70"
                        style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #3498DB; -fx-text-fill: #FFFFFF; -fx-padding: 15px; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand;"/>

                <Button fx:id="btnExit" text="Salir"
                        prefWidth="400" prefHeight="60"
                        style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-background-color: #E74C3C; -fx-text-fill: #FFFFFF; -fx-padding: 12px; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand;"/>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <Label text="© 2026 ConFiMICDB - Todos los derechos reservados"
               style="-fx-font-size: 11px; -fx-text-fill: #95A5A6; -fx-padding: 20px; -fx-alignment: center;"
               BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>

