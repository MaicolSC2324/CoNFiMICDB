<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.java.fx.controllers.FormulariosController"
            style="-fx-background-color: #f5f5f5;">
    <top>
        <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <Label text="Formularios" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 30; -fx-alignment: center;">
            <Button fx:id="btnGestionarAeronaves" text="Gestionar Aeronaves"
                    style="-fx-padding: 15px 30px; -fx-font-size: 14; -fx-background-color: #2196F3; -fx-text-fill: white;
                           -fx-border-radius: 4; -fx-background-radius: 4; -fx-min-width: 250;" />

            <Button fx:id="btnGestionarHojasLibro" text="Gestionar Hojas del Libro de Vuelo"
                    style="-fx-padding: 15px 30px; -fx-font-size: 14; -fx-background-color: #4CAF50; -fx-text-fill: white;
                           -fx-border-radius: 4; -fx-background-radius: 4; -fx-min-width: 250;" />

            <Button fx:id="btnRegistrarDisponibilidad" text="Registrar Disponibilidad"
                    style="-fx-padding: 15px 30px; -fx-font-size: 14; -fx-background-color: #FF9800; -fx-text-fill: white;
                           -fx-border-radius: 4; -fx-background-radius: 4; -fx-min-width: 250;" />
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <Button fx:id="btnVolver" text="Volver"
                    style="-fx-padding: 8px 20px; -fx-font-size: 11; -fx-background-color: #757575; -fx-text-fill: white;
                           -fx-border-radius: 4; -fx-background-radius: 4;" />
        </HBox>
    </bottom>
</BorderPane>
